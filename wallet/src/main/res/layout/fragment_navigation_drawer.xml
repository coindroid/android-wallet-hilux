<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_wallet">
    <ListView
        android:id="@+id/useful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coins_list"
        android:background="@color/background_wallet"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
    <ListView
        android:id="@+id/coins_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_wallet"
        android:choiceMode="singleChoice"
        android:divider="@color/background_wallet"
        android:dividerHeight="0dp" />



    <Button
        android:id="@+id/add_coins"
        style="@style/BorderlessButtonLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/actionbar_bg"
        android:text="@string/button_add_coins"
        android:textColor="@color/main_text" />

</RelativeLayout>