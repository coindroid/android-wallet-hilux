<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_drawer_bg"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment">

    <ListView
        android:id="@+id/coins_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_wallet"
        android:choiceMode="singleChoice"
        android:divider="@color/background_wallet"
        android:dividerHeight="0dp" />

    <ListView
        android:id="@+id/useful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_wallet"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/add_coins"
            style="@style/BorderlessButtonLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/actionbar_bg"
            android:text="@string/button_add_coins"
            android:textColor="@color/main_text" />
    </FrameLayout>
</LinearLayout>